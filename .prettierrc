{
  "plugins": [
    "@trivago/prettier-plugin-sort-imports"
  ],
  "bracketSpacing": true,
  "endOfLine": "lf",
  "printWidth": 120,
  "singleQuote": false,
  "semi": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "singleAttributePerLine": true,
  "bracketSameLine": false,
  "useTabs": false,
  "importOrder": [
    "<THIRD_PARTY_MODULES>",
    "(next|next-.*|@next-.*)$",
    "(react|react-.*|@react-.*)$",
    "@/types/(.*)$",
    "@/providers/(.*)$",
    "@/hocs/(.*)$",
    "@/components/(.*)$",
    "@/routes/(.*)$",
    "@/services/(.*)$",
    "@/hooks/(.*)$",
    "@/lib/(.*)$",
    "../(.*)$",
    "./(.*)$"
  ],
  "importOrderSeparation": false,
  "importOrderSortSpecifiers": true,
  "importOrderGroupNamespaceSpecifiers": true
}
